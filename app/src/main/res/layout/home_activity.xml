<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.StocksInvested.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/header"
            app:popupTheme="@style/Theme.StocksInvested.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:id="@+id/fl_loading_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/loading_timeout"
            android:layout_width="wrap_content"
            android:text="@string/loading_timeout"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_weight = "1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/summery"
        android:layout_weight = "0"
        android:layout_margin="@dimen/common_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_currentval"
            android:text="@string/currentval"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/currentval"
            android:text="@string/currentval"
            android:layout_alignBaseline="@+id/txt_currentval"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_investment"
            android:text="@string/investment"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_top"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_below="@+id/txt_currentval"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/total_investment"
            android:text="@string/investment"
            android:layout_alignBaseline="@+id/txt_investment"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_todayspl"
            android:text="@string/todayspl"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_top"
            android:textColor="@color/black"
            android:layout_below="@+id/txt_investment"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/todays_pl"
            android:text="@string/todayspl"
            android:layout_alignBaseline="@+id/txt_todayspl"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_totalspl"
            android:text="@string/totalpl"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/bottom_margin"
            android:layout_below="@+id/txt_todayspl"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/total_pl"
            android:layout_alignBaseline="@+id/txt_totalspl"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="@dimen/bottom_view_width"
            android:layout_height="@dimen/bottom_view_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_totalspl"
            android:layout_marginTop="@dimen/bottom_margin"
            android:background="@color/black"/>
    </RelativeLayout>
</LinearLayout>